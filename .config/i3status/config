# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

##############################
###     Initial Config     ###
##############################

general {
        colors = true
        interval = 1
        output_format = "i3bar"
        markup = pango
}


################################
###        Module list       ###
################################

# To activate/deactivate a module, just comment/uncomment it 

#order += "cpu_usage"                           # CPU Usage             ( show % usage )
#order += "memory"                               # Memory Usage          ( show amount used )
#order += "disk /"                               # Disk usage            ( show free space )
order += "ethernet _first_"                     # Ethernet Adapter      ( show IP )
order += "wireless _first_"                     # WiFi Adapter          ( show IP )
#order += "path_exists VPN"                      
order += "battery 0"                            # Battery 0 Charge      ( show % charge )
order += "battery 1"                            # Battery 1 Charge      ( show % charge )
order += "spotify"
order += "volume master"                        # Main Sink Volume      ( show Vol. % )
order += "spotify weather"
order += "tztime local"                         # Time and date         ( format: D d M h:m )


########################################
###        Status Bar modules        ###
########################################

# CPU Usage
cpu_usage {
        format = "<span background='#f04371' foreground='black'> Ô°ö </span><span background='#ff64ff' foreground='#2f2f2f'>  %usage  </span> "
}

# RAM usage 
memory {
        format = "<span foreground='black' background='#eb5ee1' > ÔÄì </span><span background='#ff64ff' foreground='#2f2f2f'> %used </span>"
}

# Disk Usage (root)
disk "/" {
        format = "<span background='#a3f7e4' foreground='black'> Ôüâ </span><span background='#ff64ff foreground='#2f2f2f'> %avail </span>"
}

# Ethernet port
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "<span background='#6ef077' foreground='black'> Ô†ñ </span><span background='#ff64ff' foreground='#2f2f2f'> %ip </span>"
        format_down = ""
}

# Wifi adapter
wireless  _first_{
        # if you use %speed, i3status requires root privileges
        format_up = "<span background='#6ef077' foreground='black'> Ô™® </span><span background='#ff64ff' foreground='#2f2f2f'> %ip </span>"
        format_down = ""
        on_click 1 = "exec nm-applet"
        on_click 3 = "exec pkill nm-applet"
}

# LTE Module
wireless wwp0s20f0u3c3 {
      # if you use %speed, i3status requires root privileges
        format_up = "<span background='#6ef077' foreground='black'> üì∂ </span>"
        format_down = ""  
}

# VPN 
path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tap0"
        format = "<span background='#6ef077' foreground='black'> Ô™Å </span>"
        format_down=""
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tap0"
        format = "<span background='#6ef077' foreground='black'> Ô™Å </span>"
        format_down=""
}

# Time
tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format_time = "%a %d %b %H:%M"
        format = "<span background='#f3ff70' foreground='black'> ÓéÜ </span><span background='#ff64ff' foreground='#2f2f2f'> %time </span>"
}

# Battery 0
battery 0 {
        format = "<span background='#6ef077' foreground='black'> %status </span><span background='#ff64ff' foreground='#2f2f2f'> %percentage </span>"
        format_down = ""
        status_chr  = "ÔñÉ"
        status_bat  = "Ôï∏"
        status_unk  = "ÔñÇ"
        status_full = "Ôï∏"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
        last_full_capacity = true
        integer_battery_capacity = true
}

# Battery 1 (if exists)
battery 1 {
        format = "<span background='#6ef077' foreground='black'> %status </span><span background='#ff64ff' foreground='#2f2f2f'> %percentage </span>"
        format_down = ""
        status_chr  = "ÔñÉ"
        status_bat  = "Ôï∏"
        status_unk  = "ÔñÇ"
        status_full = "Ôï∏"
        path        = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
        integer_battery_capacity = true
        last_full_capacity = true
}

# Volume Display
volume master {
        format = "<span background='#6ef077' foreground='black'> Ô©Ω </span><span background='#ff64ff' foreground='#2f2f2f'> %volume </span>"
        format_muted = "<span background='#f04371' foreground='black'> Ô™Ä </span>"
        device = "pulse"
        mixer = "Master"
        mixer_idx = 0
        on_click 1 = "exec cool-retro-term -e pulsemixer"
}

# Spotify
spotify {
        format = "<span background='#0abe13' foreground='black'> ÔÜº </span><span background='#ff64ff' foreground='#2f2f2f'> {content} </span>"
        content = shell(sp current-oneline)
        on_click 1 = "exec sp play"
        on_click 3 = "exec sp next"
        request_timeout = 10
}

# wttr.in
spotify weather {
        format = "<span background='#6ef077' foreground='black'> {head} </span><span background='#ff64ff' foreground='#2f2f2f'> {content} </span>"
        content = shell(curl wttr.in/Spotsylvania\?format=2 | cut -c4-100)
        head = shell(curl wttr.in/Spotsylvania\?format=2 | cut -c1-3)
        request_timeout = 10
}