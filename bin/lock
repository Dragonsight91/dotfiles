#!/bin/bash
i3lock \
    --blur=10 \
    --inside-color=000000a0 \
    --insidever-color=0fff00ff \
    --insidewrong-color=00000000 \
    --ring-color=00000000 \
    --ringver-color=28282800 \
    --ringwrong-color=ff0000ff \
    --line-color=FF0083ff \
    --keyhl-color=FF0083FF \
    --bshl-color=FB4934FF \
    --separator-color=28282800 \
    --verif-color=00000000 \
    --wrong-color=Fc0000FF \
    --layout-color=00000000 \
    --time-color=FF0083ff \
    --date-color=00000000 \
    --greeter-color=FF0083ff \
    --ind-pos='960:530' \
    --time-pos='960:540' \
    --time-str='%H:%M:%S' \
    --date-str='$USER' \
    --date-pos='960:550' \
    --time-font='monospace' \
    --time-size=40 \
    --radius=128 \
    --ring-width=10 \
    --verif-text='' \
    --wrong-text='' \
    --noinput-text='' \
    --lock-text='' \
    --lockfailed-text='' \
    --greeter-text="$(get_quotes)" \
    --greeter-pos='960:900' \
    --indicator \
	--pass-power-keys \
    --pass-media-keys \
	--pass-screen-keys \
    --force-clock \
    --nofork \
